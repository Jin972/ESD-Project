@model IEnumerable<ESD_Project.Models.Post>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}

<h2>Index</h2>
<hr>

<h2>My Posts</h2>
<hr>
<div class="social-box">
    <div class="row">
        @if (ViewBag.NotFoundYourPosts == null)
        {

            foreach (var item in Model)
            {
            <div class="col-lg-4 col-md-6 col-xs-12 text-center">
                <a href="@Url.Action("SubmitPosts","Student", new {myPostsId = item.PostId })">
                    <div class="box">
                        <div class="box-title">
                            <h3>@Html.DisplayFor(modelItem => item.Topic.Name)</h3>
                        </div>
                        <div class="box-text">
                            <span class="me-2">Submited Date:</span><span class="card-text">@Html.DisplayFor(modelItem => item.CreateDate)</span>
                        </div>
                        <div class="box-btn">
                            <a href="@Url.Action("SubmitPosts","Student", new {myPostsId = item.PostId })">Go to &#8811; </a>
                        </div>
                    
                    </div>
                  </a>
            </div>
            }
        }
        else
        {

        }

    </div>
</div>